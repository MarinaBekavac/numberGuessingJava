<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.GameController">
   <children>
      <Label fx:id="title" layoutX="56.0" layoutY="28.0" prefHeight="54.0" prefWidth="159.0" text="Guess the number" textFill="#da0a0a">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Button fx:id="submit" layoutX="56.0" layoutY="149.0" mnemonicParsing="false" onAction="#checkValue" text="Guess" />
      <Label fx:id="outputLabel" layoutX="56.0" layoutY="211.0" prefHeight="54.0" prefWidth="462.0" textAlignment="CENTER" />
      <TextField fx:id="userGuess" layoutX="56.0" layoutY="82.0" onAction="#checkValue" />
      <Label fx:id="numberOfGuesses" layoutX="55.0" layoutY="347.0" prefHeight="38.0" prefWidth="300.0" />
   </children>
</AnchorPane>
